<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- 顶部切换布局 -->

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:padding="@dimen/d5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_coupon_can"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_can_use_select"
            android:gravity="center"
            android:text="@string/coupon_can_use"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_coupon_used"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_used_unselect"
            android:gravity="center"
            android:text="@string/coupon_used"
            android:textColor="@color/appColor"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_coupon_delay"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d1"
            android:layout_weight="1"
            android:background="@drawable/coupon_delay_unselect"
            android:gravity="center"
            android:text="@string/coupon_delay"
            android:textColor="@color/appColor"
            android:textSize="@dimen/s14" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:padding="@dimen/d5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_coupon_can_can"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/coupon_can_use_select"
            android:gravity="center"
            android:text="可使用优惠券"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_coupon_can_not"
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d1"
            android:layout_weight="1"
            android:background="@drawable/coupon_delay_unselect"
            android:gravity="center"
            android:text="不可使用优惠券"
            android:textColor="@color/appColor"
            android:textSize="@dimen/s14" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/coupon_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>