<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/CameraIdPhoto_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:rotation="90"
        android:src="@drawable/ic_head_skeleton_back" />

    <FrameLayout
        android:id="@+id/CameraIdPhoto_control"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/control_background">

        <Button
            android:id="@+id/CameraIdPhoto_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_carmera_picture_selector"
            android:padding="5dp"
            android:text="@string/picture"
            android:textColor="@color/whiteColor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/CameraIdPhoto_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@color/transparentColor"
            android:padding="5dp"
            android:text="@string/cancel"
            android:textColor="@color/whiteColor"
            android:textSize="16sp" />
    </FrameLayout>

</RelativeLayout>
