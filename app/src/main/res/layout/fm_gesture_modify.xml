<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 手势提示文字 -->
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d40"
            android:text="@string/security_message_9"
            android:textColor="@color/color666666"
            android:textSize="@dimen/content_x" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30">

            <!-- 原手势密码手势密码 -->
            <FrameLayout
                android:id="@+id/login_gesture_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 修改手势密码 -->
            <FrameLayout
                android:id="@+id/modify_gesture_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- 确认修改手势密码 -->
            <FrameLayout
                android:id="@+id/modify_check_gesture_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    <!-- 底部切换成账号登录对话框 -->
    <TextView
        android:id="@+id/show_login_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/d20"
        android:text="@string/security_message_10"
        android:textColor="@color/liji_c_blue" />

</RelativeLayout>