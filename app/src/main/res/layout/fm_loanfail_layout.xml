<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/viewPaddingTop"
        android:drawableLeft="@drawable/ic_archives_failed"
        android:drawablePadding="10dp"
        android:text="@string/LoanFail_messgae_1"
        android:textColor="@color/redColor"
        android:textSize="18sp" />


    <View style="@style/LineViewStyle" />

    <Button
        android:id="@+id/loan_fail_Submit"
        android:layout_marginTop="200dp"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/withdrawals_message_14" />

</LinearLayout>