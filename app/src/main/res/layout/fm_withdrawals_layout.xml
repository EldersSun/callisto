<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- 顶部贷款状态 start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loan_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:textColor="@color/loan_big_text"
                android:textSize="@dimen/s18" />

            <TextView
                android:id="@+id/loan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:textColor="@color/appColor2"
                android:textSize="@dimen/s40"
                android:textStyle="bold" />

            <View
                style="@style/LineViewStyle"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/d5"
                android:paddingTop="@dimen/d5">


                <ImageView
                    android:id="@+id/loan_bank_img"
                    android:layout_width="@dimen/d25"
                    android:layout_height="@dimen/d25" />

                <TextView
                    android:id="@+id/loan_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10"
                    android:textColor="@color/loan_bank_text"
                    android:textSize="@dimen/s14" />

            </LinearLayout>


        </LinearLayout>
        <!-- 顶部贷款状态 end-->

        <!-- 进度条标记贷款状态 start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:background="@color/whiteColor"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d10">

            <ImageView
                android:id="@+id/loan_time_imhShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/d40"
                android:layout_marginRight="@dimen/d40"
                android:layout_marginTop="@dimen/viewPaddingTop"
                android:src="@drawable/withd_status_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loan_status1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />


                    <TextView
                        android:id="@+id/loan_status1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loan_status2_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />


                    <TextView
                        android:id="@+id/loan_status2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loan_status3_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />


                    <TextView
                        android:id="@+id/loan_status3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_time_text"
                        android:textSize="@dimen/s13" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- 进度条标记贷款状态 end-->

        <!-- 贷款描述 start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="vertical">

            <View
                style="@style/LineViewStyle"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginRight="@dimen/d25" />


            <!-- 到账金额 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:background="@color/whiteColor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d25">

                <TextView
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/withdrawals_message_10"
                    android:textColor="@color/loan_detail_text"
                    android:textSize="@dimen/s14" />


                <LinearLayout
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/loan_real_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/loan_bank_text"
                        android:textSize="@dimen/s13" />

                    <ImageView
                        android:id="@+id/iv_rate"
                        android:layout_width="@dimen/d13"
                        android:layout_height="@dimen/d13"
                        android:layout_marginLeft="@dimen/d5"
                        android:src="@drawable/ic_add_bank_phone_question_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textColor="@color/loan_bank_text"
                        android:textSize="@dimen/s13" />

                </LinearLayout>


            </LinearLayout>

            <View
                style="@style/LineViewStyle"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginRight="@dimen/d25" />

            <!-- 提现到 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:background="@color/whiteColor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d25">

                <TextView
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/withdrawals_message_11"
                    android:textColor="@color/loan_detail_text"
                    android:textSize="@dimen/s14" />


                <TextView
                    android:id="@+id/loan_card"
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textColor="@color/loan_bank_text"
                    android:textSize="@dimen/s13" />
            </LinearLayout>

            <View
                style="@style/LineViewStyle"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginRight="@dimen/d25" />

            <!-- 到期还款 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:background="@color/whiteColor"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/d25">

                <TextView
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/withdrawals_message_12"
                    android:textColor="@color/loan_detail_text"
                    android:textSize="@dimen/s14" />

                <TextView
                    android:id="@+id/loan_pay_date"
                    android:layout_width="@dimen/d0"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textColor="@color/loan_bank_text"
                    android:textSize="@dimen/s13" />
            </LinearLayout>
        </LinearLayout>
        <!-- 贷款描述 start-->


        <RelativeLayout
            android:id="@+id/with_time_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="@dimen/d5"
            android:background="@color/whiteColor"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d25">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_bill" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_toRightOf="@+id/iv"
                android:text="@string/withdrawals_message_13"
                android:textColor="@color/loan_detail_text" />

            <ImageView
                android:layout_width="@dimen/d15"
                android:layout_height="@dimen/d15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d20"
                android:src="@mipmap/icon_home_product_arrow" />

        </RelativeLayout>

        <!-- 知道按钮，成功状态下显示 start-->
        <Button
            android:id="@+id/with_time_submit"
            style="@style/loanButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/withdrawals_message_14"
            android:visibility="gone" />
        <!-- 知道按钮，成功状态下显示 end-->

        <!-- 提示 start-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d20"
            android:lineSpacingExtra="@dimen/d3"
            android:text="@string/loan_tip"
            android:textColor="@color/loan_time_text"
            android:textSize="@dimen/s13" />
        <!-- 提示 start-->

    </LinearLayout>
</ScrollView>