<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1"
    android:orientation="vertical">


    <!-- 头部的标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d10"
            android:gravity="center_vertical"
            android:text="贷款相关协议"
            android:textColor="@color/appColor"
            android:textSize="@dimen/s16" />


        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d5"
            android:padding="@dimen/d5"
            android:src="@drawable/crop__ic_cancel" />


    </RelativeLayout>


    <View style="@style/LineViewStyle2" />


    <TextView
        android:id="@+id/xieyi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:paddingLeft="@dimen/d20"
        android:background="@color/whiteColor"
        android:gravity="center_vertical"
        android:text="《中银消费-个人信用贷款协议》"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/s14" />

    <TextView
        android:id="@+id/xinyong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:paddingLeft="@dimen/d20"
        android:layout_marginTop="@dimen/d1"
        android:background="@color/whiteColor"
        android:gravity="center_vertical"
        android:text="《个人信用报告查询授权书》"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/s14" />

    <RelativeLayout
        android:id="@+id/all_confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/RowHeight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/whiteColor"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/appColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d35"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/all_user_selector_Agreement"
                style="@style/tongyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textColor="@color/loan_bank_text"
                android:textSize="@dimen/s12" />


            <Button
                android:id="@+id/all_user_Agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparentColor"
                android:gravity="center"
                android:text="@string/all_Product_message_9"
                android:textColor="@color/appColor"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/all_submit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/appColor"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/all_Product_message_10"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/s16" />
    </RelativeLayout>


</LinearLayout>

