<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/transparentColor"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="235dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparentColor">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/d5"
            android:layout_marginTop="105dp"
            android:src="@drawable/btn_close_dialog_pressed" />

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="133dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/dlg_invite_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_title"
            android:background="@drawable/share_dialog_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d20"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:paddingTop="@dimen/d5">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邀请好友成功,可领取免息券;\n每张可减免15天利息,多邀多得。\n快来领取吧!"
                android:textColor="@color/loan_big_text"
                android:textSize="@dimen/s12" />


            <Button
                android:id="@+id/btn_share"
                style="@style/shareButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/withdrawals_message_14" />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>