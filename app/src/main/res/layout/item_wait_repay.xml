<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d90"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginTop="@dimen/d10"
        android:background="@drawable/wait_repay_item_bg"
        android:orientation="vertical">


        <!-- 上部金额信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:paddingTop="@dimen/d10">

            <TextView
                android:id="@+id/tv_repay_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/loan_big_text"
                android:textSize="@dimen/s15" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_loan_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/loan_bank_text"
                    android:textSize="@dimen/s12" />

                <TextView
                    android:id="@+id/tv_loan_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_toRightOf="@+id/tv_loan_money"
                    android:gravity="center_vertical"
                    android:textColor="@color/loan_bank_text"
                    android:textSize="@dimen/s12" />


                <TextView
                    android:id="@+id/tv_fail_repay"
                    android:layout_width="@dimen/d60"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/wait_repay_btn"
                    android:gravity="center"
                    android:text="重新支付"
                    android:textColor="@color/whiteColor"
                    android:textSize="11sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:background="#F1F3F6" />

        <!-- 下部贷款时间信息 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_loan_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d10"
                android:textColor="@color/loan_bank_text"
                android:textSize="@dimen/s12" />


            <ImageView
                android:id="@+id/iv_detail"
                android:padding="@dimen/d10"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/d10"
                android:src="@drawable/coupon_detail"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>