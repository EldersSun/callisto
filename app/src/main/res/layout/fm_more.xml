<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- 关于 -->
    <RelativeLayout
        android:id="@+id/more_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="@color/whiteColor"
        android:paddingLeft="@dimen/d20"
        android:paddingRight="@dimen/d20">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@+id/iv_6"
            android:text="@string/more_about"
            android:textColor="@color/loan_big_text"
            android:textSize="@dimen/s14" />


        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_product_arrow" />


    </RelativeLayout>

    <View style="@style/LineViewStyle1" />

    <!-- 意见反馈 -->
    <RelativeLayout
        android:id="@+id/more_advise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="@color/whiteColor"
        android:paddingLeft="@dimen/d20"
        android:paddingRight="@dimen/d20">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@+id/iv_7"
            android:text="@string/more_advise"
            android:textColor="@color/loan_big_text"
            android:textSize="@dimen/s14" />


        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_product_arrow" />
    </RelativeLayout>

    <View style="@style/LineViewStyle1" />

    <!-- 免责声明 -->
    <RelativeLayout
        android:id="@+id/more_shengming"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:background="@color/whiteColor"
        android:paddingLeft="@dimen/d20"
        android:paddingRight="@dimen/d20">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@+id/iv_8"
            android:text="@string/more_shengming"
            android:textColor="@color/loan_big_text"
            android:textSize="@dimen/s14" />


        <ImageView
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_product_arrow" />


    </RelativeLayout>

    <View style="@style/LineViewStyle1" />

</LinearLayout>

