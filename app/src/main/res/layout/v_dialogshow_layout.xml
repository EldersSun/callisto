<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shape_back"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialogShowTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45">

                <TextView
                    android:id="@+id/dialogShowTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/dialog_title"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/s14" />

                <Button
                    android:id="@+id/dialogShowdismiss"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/x"
                    android:visibility="gone" />
            </RelativeLayout>

            <View style="@style/LineViewStyle2" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialogShowMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/d40"
            android:paddingTop="@dimen/d15"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/s16" />

        <View style="@style/LineViewStyle2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d45"
            android:orientation="horizontal">

            <!--android:textColor="@drawable/selectortextcolor"-->


            <Button
                android:id="@+id/dialogShowCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparentColor"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/appColor"
                android:textSize="@dimen/content_l" />

            <View
                android:id="@+id/dialogShowOnlcikLinear"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/linearColor" />

            <Button
                android:id="@+id/dialogShowSure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparentColor"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/appColor"
                android:textSize="@dimen/content_l" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>