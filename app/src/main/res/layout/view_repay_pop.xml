<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1"
    android:orientation="vertical">


    <!-- 头部的标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30">


        <ImageView
            android:id="@+id/iv_cancel_pay"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d5"
            android:padding="@dimen/d5"
            android:src="@drawable/crop__ic_cancel" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/repay_title"
            android:textColor="@color/appColor"
            android:textSize="@dimen/s15" />

    </RelativeLayout>


    <View
        style="@style/LineViewStyle2"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d20"
        android:text="@string/repay_maizi"
        android:textColor="@color/loan_big_text"
        android:textSize="@dimen/s14" />

    <TextView
        android:id="@+id/repay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d3"
        android:text="￥ 50000"
        android:textColor="@color/blackColor"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_show_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/s14"
            android:textColor="@color/loan_detail_text"/>


    </LinearLayout>


    <ListView
        android:id="@+id/repay_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d100"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d20"/>

    <LinearLayout
        android:id="@+id/repay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:layout_marginBottom="@dimen/d30"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/btn_shape_selector_false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_wait"
            android:layout_width="@dimen/d20"
            android:layout_height="@dimen/d20"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_pay_safe" />


        <ProgressBar
            android:id="@+id/repaying"
            android:layout_width="@dimen/d20"
            android:layout_height="@dimen/d20"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d10"
            android:gravity="center"
            android:text="@string/repay_now"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/s16" />

    </LinearLayout>

</LinearLayout>

